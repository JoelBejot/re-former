<% if @user.errors.any? %>
  <div id="error explanation">
    <h2><%= pluralize(@user.errors.count, "error") %> prohibited this form from being saved: </h2>

    <ul>
      <% @user.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @user do |f| %>
  <%= f.label(:email) %>
  <%= f.email_field(:email, placeholder: 'example@email.com') %><br>
  <%= f.label(:username) %>
  <%= f.text_field(:username, placeholder: 'username') %><br>
  <%= f.label(:password) %>
  <%= f.password_field(:password, placeholder: 'typeagreatpassword') %><br>
  <%= f.submit('Submit') %>
<% end %>